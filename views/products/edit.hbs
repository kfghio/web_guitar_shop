
<h1>Редактирование товара</h1>

<form action="/products/{{product.id}}/update" method="post">
  <div>
    <label>Название:</label>
    <input type="text" name="name" value="{{product.name}}" required>
  </div>

  <div>
    <label>Цена:</label>
    <input
      type="number"
      step="0.01"
      name="price"
      value="{{product.price}}"
      required
    >
  </div>

  <button type="submit">Сохранить</button>
</form>